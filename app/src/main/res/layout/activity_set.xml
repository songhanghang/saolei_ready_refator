<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".SetActivity">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/mmenu_setting"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="52dp"
            android:src="@drawable/msetting_audio"/>

    <ImageView
            android:id="@+id/image_X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageView1"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginRight="16dp"
            android:src="@drawable/msetting_audio_no"/>

    <ImageView
            android:id="@+id/image_V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignLeft="@+id/image_X"
            android:src="@drawable/msetting_audio_yes"/>

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"
            android:src="@drawable/msetting_skintitle"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView3"
            android:gravity="center_vertical">

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <ImageView
                    android:id="@+id/imageWirte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/metal_00"
                    android:layout_gravity="center"/>

            <ImageView
                    android:id="@+id/image_Wirte_box"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/msetting_skinbox"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    />

        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/imageYellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/beach_00"
                    android:layout_gravity="center"/>

            <ImageView
                    android:id="@+id/image_Yellow_box"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/msetting_skinbox"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/image_Green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/grass_00"
                    android:layout_gravity="center"/>

            <ImageView
                    android:id="@+id/image_Gereen_box"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/msetting_skinbox"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <ImageView
                    android:id="@+id/imageBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/snow_00"
                    android:layout_gravity="center"/>

            <ImageView
                    android:id="@+id/image_Blue_box"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/msetting_skinbox"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>